<?xml version='1.0' encoding='utf-8'?>
<widget id="gr.aueb.cs.foss.notes" version="0.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>FOSS Notes Demo</name>
    <description>
        A sample notes application for the FOSS PhoneGap presentation.
    </description>
    <author email="nick.nachos86@gmail.com" href="https://github.com/nick-nachos"></author>
    <content src="index.html" />
    
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <plugin name="cordova-plugin-splashscreen" />
    
<access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
        
        <icon src="resources/launcher-icons/android/drawable-ldpi/icon.png" density="ldpi" />
        <icon src="resources/launcher-icons/android/drawable-mdpi/icon.png" density="mdpi" />
        <icon src="resources/launcher-icons/android/drawable-hdpi/icon.png" density="hdpi" />
        <icon src="resources/launcher-icons/android/drawable-xhdpi/icon.png" density="xhdpi" />
        <icon src="resources/launcher-icons/android/drawable-xxhdpi/icon.png" density="xxhdpi" />
        <icon src="resources/launcher-icons/android/drawable-xxxhdpi/icon.png" density="xxxhdpi" />
        
        <splash src="resources/splashes/drawable-land-ldpi/screen.png" density="land-ldpi"/>
        <splash src="resources/splashes/drawable-land-mdpi/screen.png" density="land-mdpi"/>
        <splash src="resources/splashes/drawable-land-hdpi/screen.png" density="land-hdpi"/>
        <splash src="resources/splashes/drawable-land-xhdpi/screen.png" density="land-xhdpi"/>
        <splash src="resources/splashes/drawable-land-xxhdpi/screen.png" density="land-xxhdpi"/>
        <splash src="resources/splashes/drawable-land-xxxhdpi/screen.png" density="land-xxxhdpi"/>
        
        <splash src="resources/splashes/drawable-port-ldpi/screen.png" density="port-ldpi"/>
        <splash src="resources/splashes/drawable-port-mdpi/screen.png" density="port-mdpi"/>
        <splash src="resources/splashes/drawable-port-hdpi/screen.png" density="port-hdpi"/>
        <splash src="resources/splashes/drawable-port-xhdpi/screen.png" density="port-xhdpi"/>
        <splash src="resources/splashes/drawable-port-xxhdpi/screen.png" density="port-xxhdpi"/>
        <splash src="resources/splashes/drawable-port-xxxhdpi/screen.png" density="port-xxxhdpi"/>
        
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
</widget>
